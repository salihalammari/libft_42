#include "libft.h"

size_t ft_strlcpy(char *dst, const char *src, size_t dstsize)
{
	unsigned int 	i;

	i = 0;
	while (src[i] != '\0' &&  i+1 < size)
	{
		src[i] = dst[i];
		i++;
	}
	if (i < size)
		dst[i] = '\0';
	return (ft_strlen(src));
}
